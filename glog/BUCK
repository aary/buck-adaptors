        "glog/src/signalhandler.cc",
    ],
    headers = subdir_glob([
        ("glog/src", "**/*.h"),
        ("glog/cmake-build", "**/*.h"),
    ]),
    exported_headers = subdir_glob([
        ("glog/src", "**/*.h"),
        ("glog/cmake-build", "**/*.h"),
    ], excludes = [
        "**/*config*.h"
    ]),

    tests = [
        ":test",
    ],

    visibility = [
        "PUBLIC",
    ],
)

