cxx_library(
    name = "glog",
    header_namespace = "",
    srcs = [
        "glog/src/demangle.cc",
        "glog/src/logging.cc",
        "glog/src/raw_logging.cc",
        "glog/src/symbolize.cc",
        "glog/src/utilities.cc",
